    <!-- ==================================================================
           Cleans Everything and deletes all implementation classes
         ================================================================== --> 
    <goal name="nuke">
        <ant:delete>
            <fileset dir="src/java">
                <include name="**/*Impl.java"/>
            </fileset>
        </ant:delete>
        <attainGoal name="clean"/>
